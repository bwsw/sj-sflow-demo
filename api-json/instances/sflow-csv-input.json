{
  "name": "sflow-csv-input",
  "description": "Input engine for sflow",
  "parallelism": 1,
  "perTaskCores": 0.1,
  "perTaskRam": 1024,
  "jvmOptions": {
    "-Xmx": "512m",
    "-XX:MaxMetaspaceSize=": "768m",
    "-XX:MaxDirectMemorySize=": "256m"
  },
  "coordinationService": "zookeeper-sflow-service",
  "performanceReportingInterval": 10000,
  "checkpointMode": "every-nth",
  "checkpointInterval": 4,
  "outputs": [
    "sflow-avro",
    "sflow-fallback"
  ],
  "lookupHistory": 100,
  "queueMaxSize": 10000,
  "defaultEvictionPolicy": "LFU",
  "evictionPolicy": "expanded-time",
  "options": {
    "lineSeparator": "\n",
    "fields": [
      "timestamp",
      "name",
      "agentAddress",
      "inputPort",
      "outputPort",
      "srcMAC",
      "dstMAC",
      "ethernetType",
      "inVlan",
      "outVlan",
      "srcIP",
      "dstIP",
      "ipProtocol",
      "ipTos",
      "ipTtl",
      "udpSrcPort",
      "udpDstPort",
      "tcpFlags",
      "packetSize",
      "ipSize",
      "samplingRate"
    ],
    "encoding": "UTF-8",
    "outputStream": "sflow-avro",
    "uniqueKey": [
      "timestamp",
      "name"
    ],
    "distribution": [
      "timestamp",
      "srcIP",
      "dstIP"
    ],
    "fallbackStream": "sflow-fallback"
  }
}
